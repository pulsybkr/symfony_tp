            <nav class="hidden md:flex items-center space-x-4">
                <a href="{{ path('app_recette') }}" class="text-gray-700 hover:text-primary font-medium">Explorer</a>
                {% if app.user %}
                    <a href="{{ path('app_recette_new') }}" class="btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-1 inline"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        Ajouter une recette
                    </a>
                    <div x-data="{ open: false }" class="relative">
                        <button @click="open = !open" class="flex items-center space-x-2 focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-gray-700"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                        </button>
                        <div x-show="open" 
                             x-transition
                             @click.away="open = false"
                             class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-1 z-10">
                            <a href="{{ path('app_user_profile') }}" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 inline mr-2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                Mon profil
                            </a>
                            <a href="{{ path('app_user_recettes') }}" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 inline mr-2"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
                                Mes recettes
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_admin_dashboard') }}" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 inline mr-2"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
                                    Administration
                                </a>
                            {% endif %}
                            <div class="border-t border-gray-200 my-1"></div>
                            <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 inline mr-2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                                D√©connexion
                            </a>
                        </div>
                    </div>
                {% else %}
                    <a href="{{ path('app_login') }}" class="text-gray-700 hover:text-primary font-medium">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn-primary">Inscription</a>
                {% endif %}
            </nav>
            
            <button id="mobile-menu-button" class="md:hidden text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
            </button>
        </div>
        
        {# <div class="md:hidden py-3">
            <form action="{{ path('app_recipe_search') }}" method="get" class="relative">
                <input type="text" name="q" placeholder="Rechercher une recette..." class="input-field pl-10">
                <span class="absolute left-3 top-2.5 text-gray-400">
                    <i data-feather="search" class="w-5 h-5"></i>
                </span>
            </form>
        </div> #}
        
        <div id="mobile-menu" class="md:hidden hidden pb-3">
            <nav class="flex flex-col space-y-3">
                <a href="{{ path('app_recette') }}" class="text-gray-700 hover:text-primary font-medium p-2">Explorer</a>
                {% if app.user %}
                    <a href="{{ path('app_user_profile') }}" class="text-gray-700 hover:text-primary font-medium p-2">Mon profil</a>
                    <a href="{{ path('app_user_recettes') }}" class="text-gray-700 hover:text-primary font-medium p-2">Mes recettes</a>
                    <a href="{{ path('app_recette_new') }}" class="btn-primary w-full justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-1 inline"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        Ajouter une recette
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_dashboard') }}" class="text-gray-700 hover:text-primary font-medium p-2">Administration</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="text-gray-700 hover:text-primary font-medium p-2">D√©connexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="text-gray-700 hover:text-primary font-medium p-2">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn-primary w-full justify-center">Inscription</a>
                {% endif %}
            </nav>
        </div>
    </div>
