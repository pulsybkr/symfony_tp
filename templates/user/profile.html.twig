{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center gap-6">
                    <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center text-4xl text-white overflow-hidden">
                        {% if user.profilePicture %}
                            <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" alt="Photo de profil" class="w-full h-full object-cover">
                        {% else %}
                            {{ user.username|first|upper }}
                        {% endif %}
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">{{ user.username }}</h1>
                        <p class="text-gray-600">{{ user.email }}</p>
                    </div>
                </div>
                <a href="{{ path('app_user_profile_edit') }}" 
                   class="inline-flex items-center px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors duration-300">
                    <i data-feather="edit" class="w-4 h-4 mr-2"></i>
                    Modifier le profil
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-gray-50 rounded-xl p-6 text-center">
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{{ user.recettes|length }}</h3>
                    <p class="text-gray-600">Recettes publiées</p>
                </div>
                <div class="bg-gray-50 rounded-xl p-6 text-center">
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{{ user.reviews|length }}</h3>
                    <p class="text-gray-600">Avis donnés</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 