{% extends 'base.html.twig' %}

{% block title %}Nouvel avis - {{ recette.title }}{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4 py-8">
        <div class="bg-white rounded-2xl shadow-lg p-6">
            <h1 class="text-2xl font-bold mb-6">Laisser un avis pour "{{ recette.title }}"</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="space-y-2">
                    {{ form_label(form.rating) }}
                    <div class="flex gap-4">
                        {{ form_widget(form.rating) }}
                    </div>
                </div>

                <div class="space-y-2">
                    {{ form_label(form.comment) }}
                    {{ form_widget(form.comment) }}
                </div>

                <div class="flex justify-end gap-4">
                    <a href="{{ path('app_recette_show', { id: recette.id }) }}" 
                       class="px-4 py-2 text-gray-600 hover:text-gray-800">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors duration-300">
                        Publier l'avis
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 